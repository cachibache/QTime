<div class="row-fluid">

  <% if @statements != nil %>

    <%= render @statements, remote: true %>

  <% else %>

    <p class='hero-unit' id='statement'> <%= 'There are no statements 
      left to vote on' %> </p>

  <% end %>

  <br/>
  <%= link_to 'Add a statement', new_statement_path, id: 'add_statement', 
    class: "btn", remote: true %>

</div>