<form>
  <fieldset>

    <%= form_for @question do |f| %>

      <legend>State whether this statement is true or false</legend>
      <label> <%= f.label :question %> </label>
      
      <input type="text" placeholder="Type your question here..." size="75" <%= f.text_field :question %>  <br/>
      
      <label> <%= f.label :answer %> </label>
      <input type="text" placeholder="Type true or false" size="20" <%= f.text_field :question %> >

      <button type="submit" class="btn"> <%= f.submit %> </button>

    <% end %>

  </fieldset>
</form>